# AWS Configuration for Strands Visual Builder Backend
# Copy this file to .env and fill in the values from CDK deployment

# AWS Region where resources are deployed
AWS_REGION=us-west-2

# Cognito User Pool ID for authentication
COGNITO_USER_POOL_ID=us-west-2_xxxxxxxxx

# Cognito User Pool Client ID for frontend
COGNITO_USER_POOL_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx

# DynamoDB table name for project storage
DYNAMODB_TABLE_NAME=strands-visual-builder-projects

# IAM role ARN for backend service (optional)
BACKEND_ROLE_ARN=arn:aws:iam::123456789012:role/strands-visual-builder-backend-role

# Optional: Enable debug logging
DEBUG=false

# Optional: JWT token expiration (in seconds)
JWT_EXPIRATION=3600

# Optional: CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Strands Tools Configuration
# Set to "enabled" to auto-approve python_repl and other console tools
STRANDS_TOOL_CONSOLE_MODE=enabled